    <p style="margin-bottom: 25px"><%= greetingText %></p>
    <p style="max-width: 450px; margin-left: auto; margin-right: auto;">
        <%= messageText %>
        <% if (href) { %>
            <div style="margin-top: 56px;">
                <a href="<%= href %>" style="padding: 10px 38px; background-color: #5BA056; color: black; text-decoration: none; border-radius: 5px; font-weight: 400;"><%= buttonText %></a>
            </div>
        <% } %>
    </p>
    <p style="margin-top: 25px; margin-bottom: -25px;"><%= endText %></p>
    <br>
</div>

